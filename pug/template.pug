    include partials/_ga.html

    = "\n"

  body

    .container

      //- nav
      aside.navbar-wrap

        //- 手機時移到上方
        .mobile-top

          //- 大頭照
          figure.avatar
            img(src="https://auguston.github.io/0-sample-github/contents/img/avatar.jpg", alt="Auguston")
            figcaption Auguston
          
          //- ga pageviews
          .analytics
            .views
              i.fas.fa-eye
              span.js-pageviews
            a.email(href="mailto:augustus0818@gmail.com", title="augustus0818@gmail.com")
              i.fas.fa-envelope
              span augustus
          
          //- burger button
          .burger-button.js-trigger-burger.hide-desktop-up
            span
            span
            span
        
        //- nav
        nav.navbar.js-nav-wave

          .divider 原始碼
          .main-links
            a(target="_blank", href="https://github.com/auguston/imgur-api-upload-load")
              i.fab.fa-github
              span github
            a.toggle-share.hide-desktop-up.js-open-social(href="#")
              i.fas.fa-share-alt-square
              span share
          
          .divider.js-social-share 社群分享
          .social-links
            a.js-line(target="_blank", href="", title="line")
              i.fab.fa-line
            a.js-facebook(target="_blank", href="", title="facebook")
              i.fab.fa-facebook-square
            a.js-google(target="_blank", href="", title="google+")
              i.fab.fa-google-plus-square
            a.js-twitter(target="_blank", href="", title="twitter")
              .fab.fa-twitter-square
      
      //- content
      main.contents-wrap
        block main

        .fb-comments(data-href=fburl, data-numposts="5", data-colorscheme="dark")

        footer.footer-wrap
          h6.js-copyright
            span &copy;
            span.year 2018 Auguston All Rights Reserved.


    //- js
    script(src="https://code.jquery.com/jquery-3.1.1.min.js")
    script(src="https://unpkg.com/vue/dist/vue.min.js")
    script(src="https://auguston.github.io/0-sample-github/contents/vendor/waves.min.js")
    script(src="https://auguston.github.io/0-sample-github/contents/js/main.min.js")
    block js